<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_gradient_size"
        android:background="@drawable/receive_toolbar_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true">
            <EditText
                android:id="@+id/txComment"
                style="@style/common_text_big_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset"
                android:layout_marginEnd="@dimen/common_offset"
                android:background="@drawable/edit_text_selector"
                android:backgroundTint="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="text|textCapSentences"
                android:singleLine="true"
                android:hint="@string/local_comment"
                android:textColorHint="@color/common_hint_text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txCommentTitle"
                tools:ignore="Autofill,LabelFor,TextFields" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/receiveDescription">
                <com.mw.beam.beamwallet.core.views.BeamButton
                    android:id="@+id/btnShareToken"
                    android:layout_width="@dimen/wallet_button_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/receive_button"
                    app:button_icon="@drawable/ic_share"
                    app:button_text="@string/share_token"
                    app:lower_case="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/receiveDescription"
                style="@style/common_text_big_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/receive_token_description_margin_top"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="@string/receive_description"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/advancedCard" />

            <TextView
                android:id="@+id/txCommentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_offset"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/common_offset"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/comment"
                android:textAllCaps="true"
                android:textColor="?attr/subHeaderTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressGroup" />
            <View
                android:id="@+id/txCommentDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="@id/txComment"
                app:layout_constraintStart_toStartOf="@id/txComment"
                app:layout_constraintTop_toBottomOf="@id/txComment" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addressGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/transactionTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/transactionTypeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_offset"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/transaction_type"
                            android:textAllCaps="true"
                            android:textColor="?attr/subHeaderTextColor"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/regularButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="0dp"
                            android:paddingStart="0dp"
                            android:text="@string/regular"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/transactionTypeTitle" />

                        <Button
                            android:id="@+id/maxPrivacyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/accent_btn_background"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="0dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="@string/max_privacy"
                            android:textColor="@color/accent"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/regularButton"
                            app:layout_constraintTop_toBottomOf="@+id/transactionTypeTitle" />

                        <TextView
                            android:id="@+id/notAvailableLabel"
                            style="@style/common_text_small_dark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_offset"
                            android:layout_marginTop="@dimen/send_receive_common_margin"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/max_privacy_disabled_node"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/maxPrivacyButton" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tokenExpirationtionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/transactionTypeLayout"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tokenExpireTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/token_expiration"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/oneTimeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/accent_btn_background"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="0dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/one_time"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tokenExpireTitle" />

                    <Button
                        android:id="@+id/permanentButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="@string/permanent"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/oneTimeButton"
                        app:layout_constraintTop_toBottomOf="@+id/tokenExpireTitle" />

                    <TextView
                        android:id="@+id/onlineAddressValue"
                        style="@style/common_text_big_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="16dp"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentButton"
                        tools:text="ox0123...0921234" />

                    <LinearLayout
                        android:id="@+id/onlineButtonsLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/common_offset"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/onlineAddressValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/onlineAddressValue">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/copyOnlineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_btn_copy"
                            android:padding="5dp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/qrCodeOnlineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_scan_qr"
                            android:padding="5dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <com.mw.beam.beamwallet.core.views.BeamButton
                            android:id="@+id/showOnlineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:button_text="@string/show_token"
                            app:button_text_color="@color/received_color"
                            app:fonts="1"
                            app:lower_case="true"
                            app:text_padding_enabled="false" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/onlineAddressPoolLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tokenExpirationtionLayout"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/onlineAddressPoolsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/online_token_for_pool"
                        android:textAllCaps="false"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/onlineAddressPoolsValue"
                        style="@style/common_text_big_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="@dimen/send_receive_common_margin"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/onlineAddressPoolsTitle"
                        tools:text="ox0123...0921234" />

                    <LinearLayout
                        android:id="@+id/onlineButtonsPoolLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/common_offset"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/onlineAddressPoolsValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/onlineAddressPoolsValue">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/copyPoolButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_btn_copy"
                            android:padding="5dp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/qrCodePoolButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_scan_qr"
                            android:padding="5dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <com.mw.beam.beamwallet.core.views.BeamButton
                            android:id="@+id/showPoolButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:button_text="@string/show_token"
                            app:button_text_color="@color/received_color"
                            app:fonts="1"
                            app:lower_case="true"
                            app:text_padding_enabled="false" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/offlineAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/onlineAddressPoolLayout"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/offlineAddressTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/offline_token"
                        android:textAllCaps="false"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/offlineAddressValue"
                        style="@style/common_text_big_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/offlineAddressTitle"
                        tools:text="ox0123...0921234" />

                    <TextView
                        android:id="@+id/supportsPaymentValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_italic"
                        android:text="@string/supports_payment"
                        android:textAllCaps="false"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/offlineAddressValue" />

                    <LinearLayout
                        android:id="@+id/offlineButtonsPoolLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/offlineAddressValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/offlineAddressValue">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/copyOfflineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_btn_copy"
                            android:padding="5dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="visible" />

                        <com.mw.beam.beamwallet.core.views.BeamButton
                            android:id="@+id/showOfflineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:button_text="@string/show_token"
                            app:button_text_color="@color/received_color"
                            app:fonts="1"
                            app:lower_case="true"
                            app:text_padding_enabled="false" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/maxPrivacyAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offlineAddressLayout"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/maxPrivacyAddressValue"
                        style="@style/common_text_big_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/maxPrivacyAddressTitle"
                        tools:text="ox0123...0921234" />

                    <LinearLayout
                        android:id="@+id/maxPrivacyButtonsLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/maxPrivacyAddressValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/maxPrivacyAddressValue">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/copyMaxPrivacyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_btn_copy"
                            android:padding="5dp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/qrCodeMaxPrivacyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_scan_qr"
                            android:padding="5dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <com.mw.beam.beamwallet.core.views.BeamButton
                            android:id="@+id/showMaxPrivacyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:button_text="@string/show_token"
                            app:button_text_color="@color/received_color"
                            app:fonts="1"
                            app:lower_case="true"
                            app:text_padding_enabled="false" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/maxPrivacyAddressTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/max_privacy_address"
                        android:textAllCaps="false"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <!--edit-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/editAddressCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                    <EditText
                        android:id="@+id/comment"
                        style="@style/common_text_big_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginEnd="@dimen/common_offset"
                        android:background="@drawable/edit_text_selector"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/no_name"
                        android:imeOptions="actionDone"
                        android:inputType="text|textCapSentences"
                        android:singleLine="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/commentTitle"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <ImageView
                        android:id="@+id/tagAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_add"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/categoryTitle" />

                    <LinearLayout
                        android:id="@+id/editAddressContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/receive_card_padding"
                        android:paddingBottom="@dimen/receive_card_padding"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/editAddressTitle"
                            style="@style/common_subheader_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_offset"
                            android:letterSpacing="0.15"
                            android:text="@string/edit_token"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_text_small_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/btnExpandEditAddress"
                            android:layout_width="@dimen/wallet_expandable_icon_size"
                            android:layout_height="@dimen/wallet_expandable_icon_size"
                            android:background="@drawable/btn_drop_down"
                            android:contentDescription="@null"
                            app:layout_constraintBottom_toBottomOf="@id/editAddressTitle"
                            app:layout_constraintStart_toEndOf="@id/editAddressTitle"
                            app:layout_constraintTop_toTopOf="@id/editAddressTitle" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/commentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/common_offset"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/name"
                        android:textAllCaps="true"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editAddressContainer" />

                    <TextView
                        android:id="@+id/categoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:layout_marginTop="@dimen/edit_address_element_offset"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/tag"
                        android:textAllCaps="true"
                        android:textColor="?attr/subHeaderTextColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/comment" />

                    <TextView
                        android:id="@+id/tags"
                        style="@style/common_text_big_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="@dimen/common_offset"
                        android:paddingBottom="@dimen/receive_card_padding"
                        app:layout_constraintEnd_toStartOf="@id/tagAction"
                        app:layout_constraintStart_toStartOf="@id/categoryTitle"
                        app:layout_constraintTop_toBottomOf="@id/categoryTitle"
                        tools:text="Salary, Payments" />

                    <View
                        android:id="@+id/commentDivider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        app:layout_constraintEnd_toEndOf="@id/comment"
                        app:layout_constraintStart_toStartOf="@id/comment"
                        app:layout_constraintTop_toBottomOf="@id/comment" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/editAddressGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="commentDivider,tags,tagAction,categoryTitle,commentTitle,comment"
                        tools:visibility="visible" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/maxPrivacyAddressLayout">

                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/advancedCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="?attr/cardBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txCommentDivider">
                <EditText
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_offset"
                    android:layout_marginEnd="@dimen/common_offset"
                    android:background="@drawable/edit_text_selector"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:hint="@string/zero"
                    android:textColor="@color/received_color"
                    android:textColorHint="@color/common_hint_text_color"
                    android:textSize="@dimen/receive_amount_text_size"
                    app:layout_constraintEnd_toStartOf="@id/currency"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amountTitle"
                    tools:hint="0"
                    tools:ignore="Autofill,LabelFor" />
                <TextView
                    android:id="@+id/secondAvailableSum"
                    style="@style/common_text_big_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/amount"
                    app:layout_constraintTop_toBottomOf="@+id/amount"
                    tools:text="1234 USD" />
                <LinearLayout
                    android:id="@+id/advancedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/receive_card_padding"
                    android:paddingBottom="@dimen/receive_card_padding"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/advancedTitle"
                        style="@style/common_subheader_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_offset"
                        android:letterSpacing="0.15"
                        android:text="@string/advanced"
                        android:textAllCaps="true"
                        android:textSize="@dimen/common_text_small_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <View
                        android:id="@+id/btnExpandAdvanced"
                        android:layout_width="@dimen/wallet_expandable_icon_size"
                        android:layout_height="@dimen/wallet_expandable_icon_size"
                        android:background="@drawable/btn_drop_down"
                        android:contentDescription="@null"
                        app:layout_constraintBottom_toBottomOf="@id/advancedTitle"
                        app:layout_constraintStart_toEndOf="@id/advancedTitle"
                        app:layout_constraintTop_toTopOf="@id/advancedTitle" />
                </LinearLayout>
                <TextView
                    android:id="@+id/amountTitle"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="12sp"
                    android:textColor="?attr/subHeaderTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_offset"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/common_offset"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/advancedContainer"
                    tools:text="@string/request_an_amount" />
                <TextView
                    android:id="@+id/currency"
                    style="@style/common_subheader_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_offset"
                    android:text="@string/currency_beam"
                    android:textAllCaps="true"
                    android:textSize="@dimen/send_currency_text_size"
                    app:layout_constraintBottom_toBottomOf="@id/amount"
                    app:layout_constraintEnd_toEndOf="parent" />
                <View
                    android:id="@+id/amountDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="@id/amount"
                    app:layout_constraintStart_toStartOf="@id/amount"
                    app:layout_constraintTop_toBottomOf="@id/amount" />
                <View
                    android:id="@+id/emptySpaceDivider"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amountDivider" />
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/advancedGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="currency,amountDivider,amount,amountTitle,emptySpaceDivider"
                    tools:visibility="visible" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.mw.beam.beamwallet.core.views.BeamToolbar

        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerTitle="true"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
