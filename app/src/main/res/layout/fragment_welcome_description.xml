<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        style="@style/welcome_common_title_text_style"
        android:text="@string/welcome_title"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        style="@style/welcome_description_text_style"
        android:text="@string/welcome_description"
        app:layout_constraintBottom_toTopOf="@id/ic_no_see"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <ImageView
        android:id="@+id/ic_no_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/no_see"
        app:layout_constraintBottom_toTopOf="@id/no_see"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <TextView
        android:id="@+id/no_see"
        style="@style/welcome_description_text_style"
        android:text="@string/welcome_no_see"
        app:layout_constraintBottom_toTopOf="@id/ic_no_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_no_see" />

    <ImageView
        android:id="@+id/ic_no_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@id/no_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_see"
        app:srcCompat="@drawable/no_type" />

    <TextView
        android:id="@+id/no_type"
        style="@style/welcome_description_text_style"
        android:text="@string/welcome_no_type"
        app:layout_constraintBottom_toTopOf="@id/ic_copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_no_type" />

    <ImageView
        android:id="@+id/ic_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@id/copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_type"
        app:srcCompat="@drawable/copy" />

    <TextView
        android:id="@+id/copy"
        style="@style/welcome_description_text_style"
        android:text="@string/welcome_copy"
        app:layout_constraintBottom_toTopOf="@id/btnGenerate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_copy" />

    <com.mw.beam.beamwallet.core.views.BeamButton
        android:id="@+id/btnGenerate"
        style="@style/common_button_style"
        app:button_text="@string/welcome_generate_recovery_phrase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copy" />
</android.support.constraint.ConstraintLayout>
